import java.io.*;
import java.util.*;

public class PandemicSilcoAct2 {

    public static void main(String[] args) {
        String[] ciudad = new String[50];
        String[] coordenadas = new String[50];
        String[] ciudadesColindantes = new String[50];
        String[] subCiudades = new String[50];
        String[] texto = new String[50];
        int i = 0;
        int coordenada1;
        int coordenada2;
        double distancia;
        int x1 = 0;
        int x2 = 0;
        int y1 = 0;
        int y2 = 0;

        FileReader fr = null;
        BufferedReader br;

        try {
            fr = new FileReader("ciudades.txt");
            br = new BufferedReader(fr);

            String linea;
            while ((linea = br.readLine()) != null) {
                coordenada1 = 0;
                coordenada2 = 0;

                texto = linea.split(";");
                ciudad[i] = texto[0];
                coordenadas[i] = texto[2];
                ciudadesColindantes[i] = texto[3];
                subCiudades = ciudadesColindantes[i].split(",");

                String[] coordenadasSplit = coordenadas[i].split(",");
                coordenada1 = Integer.parseInt(coordenadasSplit[0]);
                //System.out.println("cordenada 1 : " + coordenada1);
                coordenada2 = Integer.parseInt(coordenadasSplit[1]);
                //System.out.println("cordenada 2 : " + coordenada2);

                System.out.println("La ciudad " + ciudad[i] + " está en las coordenadas " + coordenadas[i] + " sus ciudades colindantes son: ");

                for (int j = 0; j < subCiudades.length; j++) {
                    distancia = calcularDistancia(coordenada1, coordenada2, x1, x2, y1, y2);
                    System.out.println(subCiudades[j] + ", que está a una distancia de " + distancia);
                }
                i++;
            }

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    
    public static double calcularDistancia(int coordenada1, int coordenada2, int x1, int y1, int x2, int y2) {
    	x1 = coordenada1;
    	System.out.println(x1);
    	x2 = coordenada2;
    	System.out.println(x2);
    	y2 = 300;
    	y1 = 280;
    	return (double) Math.sqrt(Math.pow((x2 - x1),2) + Math.pow((y2 - y1),2));
    }
}
